<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hello_world_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_word"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/intro_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_intro"
        android:layout_margin="20dp"
        android:textColor="@color/violet"
        />

    <ImageView
        android:id="@+id/android_robot_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_android_robot"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/change_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_robot"
        android:background="@color/violet"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        />

</LinearLayout>